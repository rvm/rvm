#!/usr/bin/env bash

# set colors, separate multiple selections with coma, order is not important
# using bold in one definition requires resetting it in others with offbold
# using background in one color requires resetting it in others with bdefault
# example:
#   rvm_error_color=bold,red
#   rvm_notify_color=offbold,green

{ [[ "${TERM:-dumb}" != "dumb" ]] && builtin command -v tput >/dev/null ; } || exit

for color in ${1//,/ }
do
  case "${color:-}" in
    # regular colors
    black)    tput setaf 0 ;;
    red)      tput setaf 1 ;;
    green)    tput setaf 2 ;;
    yellow)   tput setaf 3 ;;
    blue)     tput setaf 4 ;;
    magenta)  tput setaf 5 ;;
    cyan)     tput setaf 6 ;;
    white)    tput setaf 7 ;;

    # emphasized (bolded) colors
    bold)     tput smso    ;;
    offbold)  tput rmso    ;;

    # background colors
    bblack)   tput setab 0 ;;
    bred)     tput setab 1 ;;
    bgreen)   tput setab 2 ;;
    byellow)  tput setab 3 ;;
    bblue)    tput setab 4 ;;
    bmagenta) tput setab 5 ;;
    bcyan)    tput setab 6 ;;
    bwhite)   tput setab 7 ;;

    # Defaults
    default)  tput setaf 9 ;;
    bdefault) tput setab 9 ;;
    *)        tput sgr0    # Reset
  esac
done
