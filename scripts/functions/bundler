#!/usr/bin/env bash

bundle()
{
  if command -v bundle >/dev/null 2>&1
  then
    printf ""
  else
    if command -v gem >/dev/null 2>&1
    then
      # Ensure that Bundler is installed. Install it if it is not.
      printf "The rubygem 'bundler' is not installed. Installing it now.\n"
      gem install bundler
    else
      printf "Cannot use 'bundler' as 'gem' was not found in the path!.\n"
    fi
  fi
  if command -v bundle >/dev/null 2>&1
  then
    printf "Bundling your gems. This may take a few minutes on first run.\n"
    if [[ -z "${1}" ]]
    then
      command bundle --binstubs update
    else
      command bundle --binstubs "$@"
    fi
  fi
}
