#!/usr/bin/env bash

function requirements_gentoo()
{
  typeset -a command_to_run command_flags
  command_to_run=()
  command_flags=()

  while
    (( $# ))
  do
    case "$1" in
      (echo)
        command_to_run+=( $1 )
        shift
        ;;
      (force)
        shift
        ;;
      (*)
        break
        ;;
    esac
  done

  (( UID == 0 )) || command_to_run+=( sudo )

  while
    (( $# ))
  do
    case "$1" in
      (update-system)
        true
        ;;
      (rvm)
        "${command_to_run[@]}" pkg_add bash curl git patch
        ;;
      (jruby-head*)
        "${command_to_run[@]}" pkg_add jdk apache-ant
        ;;
      (jruby*)
        "${command_to_run[@]}" pkg_add jdk
        ;;
      (ir*)
        "${command_to_run[@]}" pkg_add mono
        ;;
      (opal)
        "${command_to_run[@]}"
          if (( /usr/ports )); then
            cd /usr/ports/www/node
            make install clean
          else
            cd /usr

            # TODO: Make sure `uname -r` returns `5.2`
            #
            curl -O ftp://ftp.openbsd.org/pub/OpenBSD/5.2/ports.tar.gz
            tar xzf ports.tar.gz
            rm ports.tar.gz
          fi
        ;;
      (*)
        "${command_to_run[@]}" pkg_add gcc readline libxml2 libxslt autoconf automake diffutils make libtool bison
        ;;
    esac
    shift
  done
}

requirements_gentoo "$@"
